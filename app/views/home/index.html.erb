<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well mtop-50">
      <h1 class="center-it">What Are You Hungry For?</h1>
      <%= form_tag results_path do %>
        <div class="form-group">
          <%= text_field_tag :food, nil, placeholder: "What Are You In Mood For?", 
                class: "form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :location, nil, placeholder: "City, State", 
                class: "form-control" %>
        </div>
        <div class="form-group center-it">
          <%= submit_tag "Let's Eat", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>